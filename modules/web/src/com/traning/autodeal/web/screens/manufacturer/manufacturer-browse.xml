<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="manufacturersTable"
        messagesPack="com.traning.autodeal.web.screens.manufacturer">
    <data readOnly="true">
        <collection id="manufacturersDc"
                    class="com.traning.autodeal.entity.Manufacturer" view="_local">
            <loader id="manufacturersDl">
                <query>
                    <![CDATA[select e from autodeal_Manufacturer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="manufacturersTable"
            spacing="true">
        <filter id="filter"
                applyTo="manufacturersTable"
                dataLoader="manufacturersDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="manufacturersTable"
                    width="100%"
                    dataContainer="manufacturersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
                <column id="models_amount"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="manufacturersTable.create"/>
                <button id="editBtn" action="manufacturersTable.edit"/>
                <button id="removeBtn" action="manufacturersTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
