<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="clientsTable"
        messagesPack="com.traning.autodeal.web.screens.client">
    <data readOnly="true">
        <collection id="clientsDc"
                    class="com.traning.autodeal.entity.Client"
                    view="_base">
            <loader id="clientsDl">
                <query>
                    <![CDATA[select e from autodeal_Client e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="clientsTable"
            spacing="true">
        <filter id="filter"
                applyTo="clientsTable"
                dataLoader="clientsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="clientsTable"
                    width="100%"
                    dataContainer="clientsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="type"/>
                <column id="name"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="clientsTable.create"/>
                <button id="editBtn" action="clientsTable.edit"/>
                <button id="removeBtn" action="clientsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
