<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://browseCaption"
        focusComponent="colorsTable"
        messagesPack="com.traning.autodeal.web.screens.color">
    <data readOnly="true">
        <collection id="colorsDc"
                    class="com.traning.autodeal.entity.Color"
                    view="_local">
            <loader id="colorsDl">
                <query>
                    <![CDATA[select e from autodeal_Color e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="colorsTable"
            spacing="true">
        <filter id="filter"
                applyTo="colorsTable"
                dataLoader="colorsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="colorsTable"
                    width="100%"
                    dataContainer="colorsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="code"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="colorsTable.create"/>
                <button id="editBtn" action="colorsTable.edit"/>
                <button id="removeBtn" action="colorsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
